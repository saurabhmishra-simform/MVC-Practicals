@model IEnumerable<IdentityRole>
@{
    ViewBag.Title = "All Roles";
}

<h1 class="text-center">All Roles</h1>
@if (Model.Any())
{
    <a class="btn btn-primary mb-3" asp-action="AddRole" asp-controller="Role" style="width:auto">Add new role</a>
    foreach (var role in Model)
    {
        <div class="card mb-3">
            <div class="card-header">
                Role Id: @role.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">@role.Name</h5>
            </div>
            <div class="card-footer">
                <a asp-action="AddUserInRole" asp-area="" asp-controller="Role" asp-route-id="@role.Id" class="btn btn-primary">Add User in Role</a>
                <a asp-action="DeleteRole" asp-controller="adminstration" asp-route-id="@role.Id" class="btn btn-danger"
           onclick="return confirm('Are you sure you want to delete user:@role.Name')">Delete</a>
            </div>
        </div>
    }
}
else
{
    <div class="card">
        <div class="card-header">
            No roles created yet
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Use the button to create a role
            </h5>
            <a class="btn btn-primary" style="width:auto" asp-action="AddRole" asp-controller="Role">
                Create Role
            </a>
        </div>
    </div>
}
