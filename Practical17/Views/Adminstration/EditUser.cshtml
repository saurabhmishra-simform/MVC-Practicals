@model EditUserModel
@{
    ViewBag.Title = "Edit User";
}

<div class="container-fluid d-flex justify-content-center">
    <div class="card shadow-lg p-3 mb-5 bg-body-tertiary rounded mt-2" style="width: 85rem;">
        <div class="card-body">
            <h3 class="card-title text-center fw-bold">Edit User</h3>
            <div class="row">
                <div class="col-md-12">
                    <form method="post" class="mt-3">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Id" class="col-sm-2 col-form-label"></label>
                            <input asp-for="Id" disabled class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="UserName" class="col-sm-2 col-form-label"></label>
                            <input asp-for="UserName" class="form-control" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="FirstName" class="col-sm-2 col-form-label"></label>
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="LastName" class="col-sm-2 col-form-label"></label>
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Email" class="col-sm-2 col-form-label"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="MobileNumber" class="col-sm-2 col-form-label"></label>
                            <input asp-for="MobileNumber" class="form-control" />
                            <span asp-validation-for="MobileNumber" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-3">
                            <input type="submit" value="Update" class="btn btn-primary" style="width:auto" />
                            <a asp-action="ListUser" asp-controller="adminstration" class="btn btn-danger">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h5>User Roles</h5>
    </div>
    <div class="card-body">
        @if (Model.Roles.Any())
        {
            foreach (var user in Model.Roles)
            {
                <h5 class="card-title">@user</h5>
            }
        }
        else
        {
            <h5 class="card-title">None at the moment</h5>
        }
    </div>
    <div class="card-footer">
        <a asp-action="ManageUserRole" asp-controller="adminstration" asp-route-userId="@Model.Id" class="btn btn-primary">Manage Roles</a>
    </div>
</div>
<br />
<div class="card">
    <div class="card-header">
        <h5>User Claims</h5>
    </div>
    <div class="card-body">
        @if (Model.Claims.Any())
        {
            foreach (var user in Model.Claims)
            {
                <h5 class="card-title">@user</h5>
            }
        }
        else
        {
            <h5 class="card-title">None at the moment</h5>
        }
    </div>
    <div class="card-footer">
        <a asp-action="ManageUserClaim" asp-controller="adminstration" asp-route-userId="@Model.Id" class="btn btn-primary">Manage Claims</a>
    </div>
</div>
