@model IEnumerable<Users>
@{
    ViewBag.Title = "All Users";
}
<h1 class="text-center">All Users</h1>

@if (Model.Any())
{
    <a class="btn btn-primary mb-3" asp-action="Register" asp-controller="account" style="width:auto">Add new user</a>
    foreach (var user in Model)
    {
        <div class="card mb-3">
            <div class="card-header">
                User Id: @user.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">@user.UserName</h5>
            </div>
            <div class="card-footer">
                <a asp-action="EditUser" asp-area="" asp-controller="adminstration" asp-route-id="@user.Id" class="btn btn-primary">Edit</a>
                <a asp-action="DeleteUser" asp-area="" asp-controller="adminstration" asp-route-id="@user.Id" class="btn btn-danger"
                    onclick="return confirm('Are you sure you want to delete user:@user.UserName')">Delete</a>
            </div>
        </div>
    }
}
else
{
    <div class="card">
        <div class="card-header">
            No users created yet!
        </div>
        <div class="card-body">
            Use the button below to create a user
        </div>
        <div class="card-footer">
            <a asp-action="Register" asp-controller="Account" class="btn btn-primary" style="width:auto">Add new user</a>
        </div>
    </div>
}