@model EditRoleModel
@{
    ViewBag.Title = "Edit Role";
}

<div class="container-fluid d-flex justify-content-center">
    <div class="card shadow-lg p-3 mb-5 bg-body-tertiary rounded mt-2" style="width: 85rem;">
        <div class="card-body">
            <h3 class="card-title text-center fw-bold">Edit User</h3>
            <div class="row">
                <div class="col-md-12">
                    <form method="post" class="mt-3">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Id" class="col-sm-2 col-form-label"></label>
                            <input asp-for="Id" disabled class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
                            <input asp-for="RoleName" class="form-control" />
                            <span asp-validation-for="RoleName" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-3">
                            <input type="submit" value="Update" class="btn btn-primary" style="width:auto" />
                            <a asp-action="ListRole" asp-controller="adminstration" class="btn btn-danger">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h5>Users in this role</h5>
    </div>
    <div class="card-body">
        @if (Model.User.Any())
        {
            foreach (var user in Model.User)
            {
                <h5 class="card-title">@user</h5>
            }
        }
        else
        {
            <h5 class="card-title">None at the moment</h5>
        }
    </div>
    <div class="card-footer">
        <a asp-action="EditUserInRole" asp-controller="adminstration" asp-route-roleId="@Model.Id" class="btn btn-primary">Add or remove users</a>
    </div>
</div>
