@model UserClaimModel
@{
    ViewBag.Title = "Claims";
}
<form method="post">
    <div class="card">
        <div class="card-header">
           <h5>Manage User Claims</h5>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Claims.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model.Claims[i].ClaimType">
                    <input asp-for="@Model.Claims[i].IsSelected" class="form-check-input"/>
                    <label asp-for="@Model.Claims[i].IsSelected" class="form-check-label">
                    @Model.Claims[i].ClaimType
                    </label>
                </div> 
            }
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="card-footer">
           <input type="submit" value="Update" class="btn btn-primary" style="width:auto" />
           <a asp-action="EditUser" asp-controller="adminstration" asp-route-id="@Model.UserId" class="btn btn-primary" style="width:auto">Cancel</a>
        </div>
    </div>
</form>


