@model IEnumerable<Practical20.Models.Students>

@{
    ViewData["Title"] = "Index";
   
}



<h1>Student List</h1>
<hr />

<p>
  
    <a asp-action="AddStudent" class="btn btn-primary">Add Student</a>
</p>
<div id="form-content">
</div>

<table class="table" id="studentTable">
    <thead>
        <tr>
            
            <th>
                @Html.DisplayNameFor(model => model.StudentName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th></th>
            
        </tr>
    </thead>
    <tbody id="student">
    @foreach (var item in Model) {
        <tr>
             
            <td>
                @Html.DisplayFor(modelItem => item.StudentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                    <a asp-action="AddStudent" asp-route-Id="@item.StudentId" class="btn btn-success mx-2">Edit</a> |
                    <a asp-action="DeleteStudent" asp-route-Id="@item.StudentId" class="btn btn-danger mx-2">Delete</a>
            </td>
          
        </tr>
    }
    </tbody>
</table>

@section Scripts {

    <script src="/js/student-ajax.js"></script>

}
 